<Window x:Class="RecipeApplicationWPF.RecipeDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeApplicationWPF"
        mc:Ignorable="d"
        Title="Recipe Details" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="RecipeNameTextBlock" FontSize="20" FontWeight="Bold" Margin="10"/>
            <TextBlock Text="Ingredients:" FontSize="16" FontWeight="Bold" Margin="10"/>
            <ListBox x:Name="IngredientsListBox" Margin="10"/>
            <TextBlock Text="Steps:" FontSize="16" FontWeight="Bold" Margin="10"/>
            <ListBox x:Name="StepsListBox" Margin="10"/>
            <Button Content="Close" Click="Close_Click" Margin="10" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
