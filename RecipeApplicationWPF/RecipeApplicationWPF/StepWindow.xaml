<Window x:Class="RecipeApplicationWPF.StepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeApplicationWPF"
        mc:Ignorable="d"
        Title="Step" Height="200" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Add a Step" HorizontalAlignment="Center" FontSize="20" Margin="10"/>
            <TextBox x:Name="StepDescriptionTextBox" Margin="10"/>
            <Button Content="Add Step" Click="AddStep_Click" Margin="10" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
