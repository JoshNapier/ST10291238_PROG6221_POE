<Window x:Class="RecipeApplicationWPF.CreateRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeApplicationWPF"
        mc:Ignorable="d"
        Title="Create Recipe" Height="450" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Create a New Recipe" HorizontalAlignment="Center" FontSize="20" Margin="10"/>
            <Label Content="Recipe Name:" HorizontalAlignment="Center"/>
            <TextBox x:Name="RecipeNameTextBox"  Margin="10"/>
            <Label Content="Number of Ingredients:" HorizontalAlignment="Center"/>
            <TextBox x:Name="NumIngredientsTextBox" Margin="10"/>
            <Label Content="Number of Steps:" HorizontalAlignment="Center"/>
            <TextBox x:Name="NumStepsTextBox" Margin="10"/>
            <Button Content="Next" Click="Next_Click" Margin="10" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
