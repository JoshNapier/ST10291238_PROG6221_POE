<Window x:Class="RecipeApplicationWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeApplicationWPF"
        mc:Ignorable="d"
        Title="Recipe Application" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock Text="Welcome to the Recipe Creation Program!" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" FontSize="20"/>
            <TextBlock Text="Please select an option below:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>
            <Button Name="btnCreateRecipe" Content="Create a new recipe" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Click="btnCreateRecipe_Click" Margin="10"/>
            <Button Name="btnViewRecipes" Content="View all recipes" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Click="btnViewRecipes_Click" Margin="10"/>
            <Button Name="btnExit" Content="Exit" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Click="btnExit_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
